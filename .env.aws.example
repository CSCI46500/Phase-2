# AWS Environment Configuration
# Copy this to .env when deploying to AWS

# Environment
ENVIRONMENT=production

# Database (Set by ECS task definition from Terraform outputs)
DATABASE_URL=postgresql://admin:password@rds-endpoint:5432/model_registry

# AWS S3 Configuration
S3_BUCKET_NAME=model-registry-prod-packages-123456789012
S3_REGION=us-east-1
# S3_ENDPOINT_URL is not needed for real AWS S3 (only for MinIO/LocalStack)

# AWS Credentials (Use IAM roles in production - leave these empty)
# AWS_ACCESS_KEY_ID=  # Not needed when using ECS task roles
# AWS_SECRET_ACCESS_KEY=  # Not needed when using ECS task roles

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_TITLE=Model Registry API
API_VERSION=1.0.0

# Authentication
TOKEN_EXPIRY_DAYS=30
DEFAULT_API_CALLS=1000
SECRET_KEY=CHANGE_ME_USE_SECURE_RANDOM_STRING

# Security - ACME default admin credentials
ADMIN_USERNAME=ece30861defaultadminuser
ADMIN_PASSWORD=correcthorsebatterystaple123(!__+@**(A;DROP TABLE packages

# Logging
LOG_LEVEL=INFO

# SQL Echo (set to false in production)
SQL_ECHO=false

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_SEARCH_PER_MINUTE=30

# AWS Batch (for autograder jobs)
BATCH_JOB_QUEUE_ARN=arn:aws:batch:us-east-1:123456789012:job-queue/model-registry-prod-autograder-queue
BATCH_JOB_DEFINITION_ARN=arn:aws:batch:us-east-1:123456789012:job-definition/model-registry-prod-autograder-job

# CloudWatch Configuration
AWS_CLOUDWATCH_LOG_GROUP=/aws/ecs/model-registry-prod