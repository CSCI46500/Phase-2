      Name = "${local.name_prefix}-autograder-ecr"
    }
  )
}

# Lifecycle policy for autograder images
resource "aws_ecr_lifecycle_policy" "autograder" {
  repository = aws_ecr_repository.autograder.name

  policy = jsonencode({
    rules = [
      {
        rulePriority = 1
        description  = "Keep last 5 images"
        selection = {
          tagStatus     = "tagged"
          tagPrefixList = ["v"]
          countType     = "imageCountMoreThan"
          countNumber   = 5
        }
        action = {
          type = "expire"
        }
      },
      {
        rulePriority = 2
        description  = "Remove untagged images after 1 day"
        selection = {
          tagStatus   = "untagged"
          countType   = "sinceImagePushed"
          countUnit   = "days"
          countNumber = 1
        }
        action = {
          type = "expire"
        }
      }
    ]
  })
}

# Outputs for ECR
output "ecr_backend_repository_url" {
  description = "URL of the backend ECR repository"
  value       = aws_ecr_repository.backend.repository_url
}

output "ecr_autograder_repository_url" {
  description = "URL of the autograder ECR repository"
  value       = aws_ecr_repository.autograder.repository_url
}
