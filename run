#!/bin/bash
set -e

# ---- INSTALL ----
if [ "$1" = "install" ]; then
    if [ -f requirements.txt ]; then
        pip install -r requirements.txt
    fi
    exit 0
fi

# ---- TEST ----
if [ "$1" = "test" ]; then
    python3 -m src.cli.main test
    exit $?
fi

# ---- URLS ----
if [ -f "$1" ]; then
    python3 -m src.cli.main "$1"
    exit 0
fi

# ---- FALLBACK ----
echo "Unknown command: $1"
exit 1
