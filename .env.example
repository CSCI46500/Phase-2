# Environment variables for Phase-2 project
# Copy this file to .env and fill in your actual values

# Anthropic API Key for Claude LLM integration
ANTHROPIC_API_KEY=your-api-key-here

# Logging configuration
# LOG_LEVEL: 0 (silent), 1 (info), 2 (debug)
LOG_LEVEL=0

# Optional: Log file path (leave empty to log to stderr)
LOG_FILE=

# ========== Model Registry API Configuration ==========

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/model_registry

# AWS S3 Configuration
S3_BUCKET_NAME=model-registry-packages
S3_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_TITLE=Model Registry API
API_VERSION=1.0.0

# Authentication
TOKEN_EXPIRY_DAYS=30
DEFAULT_API_CALLS=1000
SECRET_KEY=change-this-secret-key-in-production

# Default Admin Credentials (CHANGE IN PRODUCTION!)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123

# SQL Echo (set to true for debugging SQL queries)
SQL_ECHO=false
